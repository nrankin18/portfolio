{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": ["airbnb", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended", "plugin:react/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "prettier", "react"],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "typescript": {
        "directory": "./tsconfig.json"
      }
    }
  },
  "rules": {
    "react/jsx-filename-extension": ["error", { "extensions": [".tsx"] }],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ],
    "curly": ["warn", "all"],
    "@typescript-eslint/no-non-null-assertion": "off",
    "no-param-reassign": "off", // Redux support
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": "error" // Fix for enum bug: https://github.com/typescript-eslint/typescript-eslint/issues/2483
  }
}
